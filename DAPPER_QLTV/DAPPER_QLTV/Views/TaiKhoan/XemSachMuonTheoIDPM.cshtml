@model IEnumerable<DAPPER_QLTV.Models.SachMuon.XemSachMuon>

@{
    ViewData["Title"] = "XemSachMuonTheoIDPM";
}

<h1>Sách Mượn </h1>

<p>
    @Html.ActionLink("Chọn Sách", "ChonSach", new { id = ViewBag.IDTaiKhoan })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaSach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenSach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenTacGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TheLoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuongMuon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaPhieuMuon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDTaiKhoan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaSach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenTacGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TheLoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuongMuon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaPhieuMuon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDTaiKhoan)
                </td>
                <td>
                    @Html.ActionLink("Hủy", "HuyMuonSach", new { IDPM = ViewBag.IDPM,IDSach = item.ID })                   
                </td>
            </tr>
        }
    </tbody>
</table>
