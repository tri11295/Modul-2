@model IEnumerable<DAPPER_QLTV.Models.ChonSach.ChonSach>

@{
    ViewData["Title"] = "ChonSach";
}

<h1>Chọn Sách</h1>

<div>    
   @Html.ActionLink("Quay Lại", "XemSachMuonTheoIDPM", new { id = ViewBag.IDPhieuMuon })
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenSach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenTacGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TheLoai)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.MaSach)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenTacGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TheLoai)
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.MaSach)
                </td>
                <td>
                    @Html.ActionLink("Chọn", "TaoSachMuon", new { id = item.ID }) |
                    @Html.ActionLink("Hủy", "Details", new { /* id=item.PrimaryKey */ }) |

                </td>

            </tr>
        }
    </tbody>  
      
    
</table>
