@model IEnumerable<DAPPER_QLTV.Models.TaiKhoan.TaiKhoanSachMuon>

@{
    ViewData["Title"] = "XemSachMuonTheoIDTK";
}

<h1>Sách Mượn Của Tài Khoản - @ViewBag.IDTaiKhoan</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>            
            <th>
                @Html.DisplayNameFor(model => model.IDSach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenSach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuongMuon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaPhieuMuon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayMuon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayTra)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongMuon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaPhieuMuon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayMuon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayTra)
            </td>
            <td>
                @Html.ActionLink("Gia Hạn", "GiaHan")
            </td>
            <td>
                @Html.ActionLink("Trả Sách", "TraSach",new {IDSach = item.IDSach,IDPM = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
